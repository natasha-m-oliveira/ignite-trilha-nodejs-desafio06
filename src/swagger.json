{
  "openapi": "3.0.0",
  "info": {
    "title": "FinApi",
    "description": "Documentação da Fin API",
    "version": "1.0.0",
    "contact": {
      "email": "natasha.oliveirabusiness@gmail.com"
    }
  },
  "paths": {
    "/api/v1/sessions": {
      "post": {
        "tags": [
          "Session"
        ],
        "summary": "Autenticação de Usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso."
          },
          "401": {
            "description": "E-mail ou senha está incorreto."
          }
        }
      }
    },
    "/api/v1/statements/balance": {
      "get": {
        "tags": [
          "Statements"
        ],
        "summary": "Obtém o extrato da conta",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso."
          },
          "404": {
            "description": "Usuário não encontrado."
          }
        }
      }
    },
    "/api/v1/statements/deposit": {
      "post": {
        "tags": [
          "Statements"
        ],
        "summary": "Realiza um novo depósito",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "amount": 5837,
                  "description": "Pagamento"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso."
          },
          "404": {
            "description": "Usuário não encontrado."
          },
          "400": {
            "description": "Saldo insuficiente."
          }
        }
      }
    },
    "/api/v1/statements/withdraw": {
      "post": {
        "tags": [
          "Statements"
        ],
        "summary": "Realiza um novo saque",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "amount": 255,
                  "description": "Contas"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso."
          },
          "404": {
            "description": "Usuário não encontrado."
          },
          "400": {
            "description": "Saldo insuficiente."
          }
        }
      }
    },
    "/api/v1/statements/{id}": {
      "get": {
        "tags": [
          "Statements"
        ],
        "summary": "Obtém os detalhes de uma operação.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da Operação",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso."
          },
          "404": {
            "description": "Usuário ou operação não encontrado."
          }
        }
      }
    },
    "/api/v1/statements/transfers/{user_id}": {
      "post": {
        "tags": [
          "Statements"
        ],
        "summary": "Realiza uma transferência.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID do Usuário beneficiário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "amount": 22,
                  "description": "Almoço"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "404": {
            "description": "Destinatário não encontrado."
          },
          "400": {
            "description": "Saldo insuficiente."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
